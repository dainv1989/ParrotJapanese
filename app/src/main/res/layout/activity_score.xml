<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noise_bkg">

    <TextView
        android:id="@+id/txtScoreTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="your score"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@drawable/noise_grey_bkg"/>

    <TextView
        android:id="@+id/sc_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="128dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:text="10/10"
        android:textSize="72sp"
        android:textColor="@color/subtile_text"/>

    <ImageView
        android:id="@+id/imgAppLogo"
        android:layout_above="@id/sc_score"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:padding="16dp"
        android:src="@drawable/parrot_speaking_coban"/>

    <LinearLayout
        android:id="@+id/groupNavigation"
        android:layout_below="@id/sc_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/sc_continue"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/replay"
            android:background="@drawable/selector_text"/>

        <ImageView
            android:id="@+id/sc_exit"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:src="@mipmap/home"
            android:background="@drawable/selector_text"/>
    </LinearLayout>
</RelativeLayout>