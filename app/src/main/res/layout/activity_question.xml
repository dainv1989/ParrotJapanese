<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/noise_bkg">

    <TextView
        android:id="@+id/txtQATitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="exercise"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:background="@drawable/noise_grey_bkg"/>

    <TextView
        android:id="@+id/qa_result"
        android:layout_below="@id/txtQATitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="result"
        android:textSize="24sp"
        android:textColor="@color/title_color"/>

    <TextView
        android:id="@+id/qa_question"
        android:layout_below="@id/qa_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="96dp"
        android:gravity="center"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="しつもん"
        android:textSize="24sp"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/qa_explain"
        android:layout_below="@id/qa_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:text="explanation"
        android:textSize="16sp"
        android:textColor="@color/subtile_text"/>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adsQuestionBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ads_id"
        android:background="@color/primary_dark"/>

    <LinearLayout
        android:id="@+id/wrapperAnswer"
        android:layout_below="@id/qa_explain"
        android:layout_above="@id/adsQuestionBanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingRight="24dp"
        android:paddingLeft="24dp">

        <TextView
            android:id="@+id/txtAnswerTitle"
            android:layout_below="@id/qa_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/qa_str_answer"
            android:textSize="16sp"
            android:textColor="@color/title_color"/>

        <ListView
            android:id="@+id/qa_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:scrollbars="none"
            android:layoutDirection="inherit"
            android:divider="@android:color/transparent"
            android:choiceMode="singleChoice"
            android:background="@drawable/noise_bkg">
        </ListView>
    </LinearLayout>
</RelativeLayout>