<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/noise_bkg">

    <TextView
        android:id="@+id/vcb_number"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:text="100."
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/speaker"
        android:layout_width="36dp"
        android:layout_height="64dp"
        android:padding="8dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/speaker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/speaker"
        android:layout_toRightOf="@id/vcb_number"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vcb_kanji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="こんにちは。"
            android:textColor="@color/title_color"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/vcb_romaji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="konnichiwa"
            android:textSize="14sp"
            android:textColor="@color/subtile_text" />

        <TextView
            android:id="@+id/vcb_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="15sp"
            android:textColor="@color/primary_text" />
    </LinearLayout>
</RelativeLayout>