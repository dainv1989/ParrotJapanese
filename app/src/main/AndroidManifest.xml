<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dainv.parrotjapanese" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:name=".ParrotJapaneseApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="layoutDirection|locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HiraActivity"
            android:label="@string/str_btnHiragana"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".KataActivity"
            android:label="@string/str_btnKatakana"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".VocabularyActivity"
            android:label="@string/str_btnVocabulary"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".CountingActivity"
            android:label="@string/str_btnCount"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".CountItemActivity"
            android:label="@string/str_btnCount"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".CountFragmentActivity"
            android:label="@string/str_btnCount"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".VocabItemActivity"
            android:label="@string/str_btnVocabulary"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".PhraseActivity"
            android:label="@string/str_btnPhrase"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".GrammarActivity"
            android:label="@string/str_btnGrammar"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".StrategyActivity"
            android:label="@string/str_btnStrategy"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".ResourceActivity"
            android:label="@string/str_btnResource"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".ExerciseActivity"
            android:label="@string/str_btnExercise"
            android:configChanges="layoutDirection|locale">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:configChanges="layoutDirection|locale">
        </activity>

        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_question"
            android:configChanges="layoutDirection|locale|screenSize|keyboardHidden">
        </activity>

        <activity
            android:name=".ScoreActivity"
            android:label="@string/str_score_title"
            android:configChanges="layoutDirection|locale">
        </activity>
    </application>

</manifest>
