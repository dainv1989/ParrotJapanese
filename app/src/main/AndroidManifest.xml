<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dainv.parrotjapanese">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ParrotJapaneseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".MainActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HiraActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".KataActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VocabularyActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CountingActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CountItemActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".VocabItemActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".PhraseActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GrammarActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StrategyActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ResourceActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ExerciseActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".QuestionActivity"
            android:configChanges="layoutDirection|locale|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ScoreActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AboutActivity"
            android:configChanges="layoutDirection|locale"
            android:screenOrientation="portrait"/>

        <!-- ads activity -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"/>
    </application>

</manifest>